VFD=mtximage   # change VFD to YOUR virtual fd

echo Copying mtximage...
cp mtximage_copy mtximage

as86 -o ts.o ts.s
bcc  -c -ansi t.c
ld86 -d -o mtx ts.o t.o mtxlib /usr/lib/bcc/libc.a

echo cp mtx to $VFD/boot/
mount -o loop $VFD /mnt
cp mtx /mnt/boot
umount /mnt

(cd USER; mku u1)

rm *.o mtx
echo done

qemu-system-i386 -fda mtximage -no-fd-bootchk
